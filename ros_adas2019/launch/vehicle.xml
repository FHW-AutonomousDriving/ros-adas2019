<launch>
    <group>
       <push-ros-namespace namespace="ros_adas2019"/>
       <include file="$(find-pkg-share ros_adas2019)/launch/ros_adas2019.launch"/>
    </group>
    
    <group>
        <node name="rplidar" pkg="rplidar_ros" exec="rplidar_composition" ns="lidar" output="screen">
            <!--
            <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
            <param name="serial_baudrate"     type="int"    value="115200"/>
            <param name="frame_id"            type="string" value="laser"/>
            <param name="inverted"            type="bool"   value="true"/>
            <param name="angle_compensate"    type="bool"   value="true"/>
            -->
        </node>
        <node name="laser_frame" pkg="tf2_ros" exec="static_transform_publisher" args="0.45 0 0 0 0 1 0 base_link laser"/>
    </group>

    <group>
       <push-ros-namespace namespace="pylon_camera_node"/>
        <arg name="camera_info_yaml" default="$(find-pkg-share ros_adas2019)/config/front_camera_calibration.yaml" />
        <node name="pylon_camera" pkg="pylon_usb_instant_camera" exec="node" output="screen">
            <param name="camera_info_yaml" value="$(var camera_info_yaml)" />
        </node>
        <node name="pylon_camera_rectify" pkg="image_proc" exec="image_proc" output="screen" />
    </group>
</launch>
